<p id="notice"><%= notice %></p>

<h2>
  <%= @listing.title %>
</h2>

<div class="row">
  <div class="col-sm-6">
    <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@listing.latitude},#{@listing.longitude}&markers=#{@listing.latitude},#{@listing.longitude}&zoom=14&size=640x400&key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8",
                  class: 'img-fluid img-rounded', alt: "#{@listing.title} on the map"%>   
  </div>
  <div class="col-sm-4" class=>
  <p>
    <strong>Address:</strong>
    <%= @listing.full_address %>
  </p>
  <p>
    <strong>Coords:</strong>
    <%= @listing.latitude %>, <%= @listing.longitude %>
  </p>

  <p>
    <strong>Bedrooms:</strong>
    <span class="badge badge-info"><%= @listing.bedroom_count %></span>
  </p>

  <p>
    <strong>Sleeps:</strong>
    <span class="badge badge-info"><%= @listing.bed_count %></span>
  </p>

  <p>
    <strong>Bathrooms:</strong>
    <span class="badge badge-info"><%= @listing.bathroom_count %></span>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @listing.description %>
  </p>

  <p>
    <strong>Night fee:</strong>
    <%= format_cents @listing.night_fee_cents %>
  |
    <strong>Cleaning fee:</strong>
    <%= format_cents @listing.cleaning_fee_cents %>
  </p>
  </div>
</div>

<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>
