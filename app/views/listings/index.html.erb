<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Street address</th>
      <th>City</th>
      <th>Country</th>
      <th>Sleeps</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Description</th>
      <th>Price per night</th>
      <th>Cleaning fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= link_to listing.title, listing %></td>
        <td><%= listing.street_address %></td>
        <td><%= listing.city %></td>
        <td><%= listing.country.name %></td>
        <td><%= listing.bed_count %></td>
        <td><%= listing.bedroom_count %></td>
        <td><%= listing.bathroom_count %></td>
        <td><%= listing.description %></td>
        <td><%= humanized_money_with_symbol listing.night_fee %></td>
        <td><%= humanized_money_with_symbol listing.cleaning_fee %></td>

        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
